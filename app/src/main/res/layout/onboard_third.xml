<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_weight="2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/checked" />
    <TextView
        android:textColor="#3fc5f0"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="50sp"
        android:text="SELESAI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAlignment="center"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:text="Pengaturan dan konfigurasi telah selesai! Sekarang anda dapat menekan tombol selesai untuk masuk ke menu utama dan menikmati aplikasi ini."
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:onClick="secondNext"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:text="BACK"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#3fc5f0"
            android:onClick="finishLine"
            android:textSize="20sp"
            android:layout_marginEnd="16dp"
            android:text="FINISH"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/quicksand_bold"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>