<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_weight="2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/web" />
    <TextView
        android:textColor="#3fc5f0"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="50sp"
        android:text="INTERNET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textAlignment="center"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:text="Aplikasi ini membutuhkan koneksi internet agar bisa beroperasi secara maksimal. Mohon sambungkan perangkat anda ke jaringan internet sebelum menggunakan aplikasi ini."
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/firstNext"
            android:onClick="firstNext"
            android:textSize="16sp"
            android:layout_marginEnd="16dp"
            android:text="NEXT"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/quicksand_bold"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>