<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/gradient_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_baseline_arrow_back_ios_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="PROFILE"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/setting"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_baseline_settings_24" />

        </RelativeLayout>


    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_photo"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_below="@+id/header"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="-64dp"
        android:src="@drawable/pp"
        app:civ_border_color="#fff"
        app:civ_border_width="4dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fb_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/header"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/facebook"
        app:civ_border_color="#fff"
        app:civ_border_width="2dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/yt_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/header"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="-20dp"
        android:layout_toStartOf="@+id/fb_icon"
        android:src="@drawable/youtube"
        app:civ_border_color="#fff"
        app:civ_border_width="2dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/wa_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/header"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="-20dp"
        android:layout_toStartOf="@+id/yt_icon"
        android:src="@drawable/phone"
        app:civ_border_color="#fff"
        app:civ_border_width="2dp" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/email_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/header"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="-20dp"
        android:layout_toStartOf="@+id/wa_icon"
        android:src="@drawable/transfer"
        app:civ_border_color="#fff"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_photo"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:text="M Hilmy Naufal"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:text="IF-2 10118046"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:text="Jurusan Teknik Informatika"
            android:textSize="16sp" />
    </LinearLayout>

    <HorizontalScrollView
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/about"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="24dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="About Me"
                        android:textColor="#3fc5f0"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginBottom="24dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="M Hilmy Naufal atau bisa dipangggil Hirumi adalah seorang mahasiswa berusia 21 tahun yang sedang menimba ilmu di Universitas Komputer Indonesia. Mempunyai keahlian di bidang komputer, dia membuat aplikasi HirumiApps untuk Ujian Tengah Semester dari mata kuliah Aplikasi Komputer Bergerak. Di waktu senggang nya dia senang melakukan aktiftas dalam rumah seperti bermain game ataupun menulis dan menonton film, sementara kegiatan di luar rumahnya dia kadang bertanding bulu tangkis ataupun lari untuk menjaga kesehatan tubuhnya agar tetap fit di masa karantina ini."
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:layout_marginHorizontal="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="24dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="Find Me"
                        android:textColor="#3fc5f0"
                        android:textSize="20sp" />
                    <fragment
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginBottom="24dp"
                        android:id="@+id/main_branch_map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        tools:context="com.googlemap.googlemap.MapsActivity" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>


</RelativeLayout>